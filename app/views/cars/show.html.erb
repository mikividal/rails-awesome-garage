<h1><%= @car.brand %></h1>
<h2><%= @car.model%></h3>
<p><%= @car.year %></p>
<p><%= @car.fuel%></p>

<hr>
<h1>Submit your comment </h1>
<%= simple_form_for [@car, @review] do |f| %>
  <%= f.input :comment, placeholder: "Leave your comment" %>
  <%= f.input :rating, collection: (1..5) %>
  <%= f.submit %>
<% end %>

<hr>

<h1>All comments </h1>
<% @car.reviews.each do |review| %>
  <p><%= review.comment %> </p>
  <p> <%= '⭐️' * review.rating%> </p>
 <% end %>

<hr>

<% if @car.favourites.empty? %>
  <%= simple_form_for [@car, @favourite] do |f| %>
    <%= f.submit 'Save in my garage' %>
  <% end %>
<% else %>
<p>This car is already in your garage</p>
<% end %>
